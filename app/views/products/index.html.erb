      <td><%= product.category_id %></td>
      <td><%= product.amount %></td>
      <td><%= product.extend %></td>
      <td><%= product.brand %></td>
      <td><%= product.purchase_price %></td>
      <td><%= product.sale_price %></td>
      <td><%= link_to "Detalles", product_path(product), class:'btn btn-primary' %></td>
    </tr>
